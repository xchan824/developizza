<!-- main -->
<main class="status container mx-auto">
    <div class="container mx-auto">
        <div class="status-box w-100 mx-auto">
            <div class="d-flex align-items-center justify-content-between">
                <h4>Track delivery status</h4>
                <h6 class="text-success rounded-5 p-2"><%= order._id %></h6>
                <input id="hiddenInput" type="hidden" value="<%= JSON.stringify(order) %>">
            </div>
            <ul>
                <li class="status_line fs-1 pb-5" data-status="order_placed"><span>Order Placed</span></li>
                <li class="status_line fs-1 pb-5" data-status="confirmed"><span>Order Confirmation</span></li>
                <li class="status_line fs-1 pb-5" data-status="prepared"><span>Preparation</span></li>
                <li class="status_line fs-1 pb-5" data-status="delivered"><span>Out for Delivery</span></li>
                <li class="status_line fs-1" data-status="completed"><span>Complete</span></li>
            </ul>
        </div>
    </div>
</main>
