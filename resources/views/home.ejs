<!-- main -->
<main class="homepage container text-center">
    <h1>All Pizzas</h1>
    <div class="container d-flex text-center justify-content-center align-items-center">
        <div class="row">
            <% pizzas.forEach(pizza => { %>
                <div class="col">
                    <div class="card" style="width: 12rem;">
                        <img src="/img/<%= pizza.image %>" class="card-img-top" alt="pizza">
                        <div class="card-body">
                            <h5 class="card-title"><%= pizza.name %></h5>
                            <p class="card-text"><%= pizza.size %></p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span>â‚±<%= pizza.price %></span>
                                <button data-pizza="<%= JSON.stringify(pizza) %>" class="add-to-cart btn btn-primary">Add</button>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
            
        </div>
    </div>
</main>
